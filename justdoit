int VerificaCarac(char * str, char c){ //--------INCOMPLETO--------//
    int i, ops = 0;

    for(i=0; i != NULL; i++){
        if(str[i] == c) ops = 1;
        break;
    }

    if(ops == 1) return 1;
    else return 0;
}
