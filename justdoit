#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>

int main(){

    char decisoes[8][1000] = {"You should not be here.", 
                            "Voce acorda. Prefere fazer tapioca ou pao?", 
                            "Tapioca de queijo ou manteiga?",
                            "pao misto ou com manteiga?",
                            "Tapioca ta uma delicia",
                            "Tapioca queimou.",
                            "Pao ta uma delicia.", 
                            "Pao queimou."
                            };
    int i, d;

    //for(i=1;i<8;i++) printf("\nLinha %d: %s\n", i, decisoes[i]);
 
    i = 1;
    while(i != 0){
        printf("%s\n", decisoes[i]);
        scanf("%d", &d);

        switch (d){
            case 1:
                i = i*2;
                break;

            case 2:
                i = i*2 + 1;
                break;
        
            default:
                printf("Programa encerrado\n");
                return 0;
        }   
    }

  return 0;
}
